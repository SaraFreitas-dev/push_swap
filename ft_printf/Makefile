# --------------------------------------------------------------------------- #
# Compiler and flags
# --------------------------------------------------------------------------- #
CC      := gcc
CFLAGS  := -Wall -Wextra -Werror -I .

# --------------------------------------------------------------------------- #
# Library name
# --------------------------------------------------------------------------- #
NAME    := ftprintf.a

# --------------------------------------------------------------------------- #
# Mandatory part sources
# --------------------------------------------------------------------------- #
SRCS    := ft_strlen.c \
           ft_putchar_fd.c \
           ft_putstr_fd.c \
           ft_putnbr_fd.c

OBJS    := $(SRCS:.c=.o)

# --------------------------------------------------------------------------- #
# Rules
# --------------------------------------------------------------------------- #
all: $(NAME)

$(NAME): $(OBJS)
	ar rcs $(NAME) $^

# --------------------------------------------------------------------------- #
# Generic compile rule
# --------------------------------------------------------------------------- #
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# --------------------------------------------------------------------------- #
# Clean rules
# --------------------------------------------------------------------------- #
clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

# --------------------------------------------------------------------------- #
.PHONY: all clean fclean re
